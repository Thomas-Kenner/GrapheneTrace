@rendermode InteractiveServer
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "Patient")]
@using GrapheneTrace.Web.Models
@using GrapheneTrace.Web.Components.Layout

<div class="patient-container">
    <PatientHeader />

    <div class="patient-content">
        <div class="settings-grid">
            <div class="card settings-card">
                <h3 class="settings-title">Personal Details</h3>
                <p class="settings-subtitle">Contact information</p>

                @if (!string.IsNullOrEmpty(personalMessage))
                {
                    <div class="alert @(personalSuccess ? "alert-success" : "alert-error")">
                        @personalMessage
                    </div>
                }

                <div class="form-grid">
                    <div class="form-group">
                        <label class="form-label">First Name</label>
                        <input type="text" class="form-input" @bind="firstName" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Last Name</label>
                        <input type="text" class="form-input" @bind="lastName" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">Email</label>
                    <input type="email" class="form-input" @bind="email" />
                </div>

                <div class="form-group">
                    <label class="form-label">Phone <span style="color: red;">*</span></label>
                    <input type="tel" class="form-input" @bind="phone" placeholder="07123 456789" />
                    <p class="form-help">UK phone number format</p>
                </div>

                <div class="form-group">
                    <label class="form-label">Address <span style="color: red;">*</span></label>
                    <input type="text" class="form-input" @bind="address" placeholder="123 Main Street" />
                </div>

                <div class="form-grid">
                    <div class="form-group">
                        <label class="form-label">City <span style="color: red;">*</span></label>
                        <input type="text" class="form-input" @bind="city" placeholder="London" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Postcode <span style="color: red;">*</span></label>
                        <input type="text" class="form-input" @bind="postcode" placeholder="SW1A 1AA" />
                        <p class="form-help">UK postcode format</p>
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">Country <span style="color: red;">*</span></label>
                    <input type="text" class="form-input" @bind="country" placeholder="United Kingdom" />
                </div>

                <button class="btn-primary" @onclick="SavePersonalDetails" disabled="@isSavingPersonal">
                    @(isSavingPersonal ? "Saving..." : "Save Details")
                </button>
            </div>

            <div class="card settings-card">
                <h3 class="settings-title">Alert Settings</h3>
                <p class="settings-subtitle">Configure notifications</p>

                <div class="form-group">
                    <label class="form-label">Pressure Alert Threshold</label>
                    <p class="form-help">Alert when exceeded</p>
                    <div class="threshold-display">@pressureThreshold mmHg</div>
                    <input type="range" class="range-slider" min="60" max="120" step="5" @bind="pressureThreshold" />
                    <div class="range-labels">
                        <span>60</span>
                        <span>120</span>
                    </div>
                </div>

                <div class="toggle-group">
                    <div class="toggle-item">
                        <div>
                            <div class="toggle-label">Push Notifications</div>
                            <div class="toggle-description">Mobile alerts</div>
                        </div>
                        <label class="toggle-switch">
                            <input type="checkbox" @bind="pushNotifications" />
                            <span class="toggle-slider"></span>
                        </label>
                    </div>

                    <div class="toggle-item">
                        <div>
                            <div class="toggle-label">Email Notifications</div>
                            <div class="toggle-description">Daily summaries</div>
                        </div>
                        <label class="toggle-switch">
                            <input type="checkbox" @bind="emailNotifications" />
                            <span class="toggle-slider"></span>
                        </label>
                    </div>

                    <div class="toggle-item">
                        <div>
                            <div class="toggle-label">Device Alerts</div>
                            <div class="toggle-description">Connection issues</div>
                        </div>
                        <label class="toggle-switch">
                            <input type="checkbox" @bind="deviceAlerts" />
                            <span class="toggle-slider"></span>
                        </label>
                    </div>
                </div>

                <button class="btn-primary" disabled>
                    Save Settings (Coming Soon)
                </button>
            </div>

            <div class="card settings-card">
                <h3 class="settings-title">Clinician Assignment</h3>
                <p class="settings-subtitle">Your assigned clinician</p>

                @if (assignedClinician != null)
                {
                    <div class="clinician-info">
                        <div class="clinician-name">
                            <strong>@assignedClinician.Clinician?.FirstName @assignedClinician.Clinician?.LastName</strong>
                        </div>
                        <div class="clinician-email">@assignedClinician.Clinician?.Email</div>
                        <div class="clinician-assigned">
                            Assigned since: @assignedClinician.AssignedAt.ToString("MMM dd, yyyy")
                        </div>
                    </div>
                    <button class="btn-outline" @onclick="ShowRequestClinicianModal">Request New Clinician</button>
                }
                else
                {
                    <div class="empty-state">No clinician assigned yet.</div>
                    <button class="btn-primary" @onclick="ShowRequestClinicianModal">Request Clinician</button>
                }

                @if (!string.IsNullOrEmpty(clinicianRequestMessage))
                {
                    <div class="alert @(clinicianRequestSuccess ? "alert-success" : "alert-error")">
                        @clinicianRequestMessage
                    </div>
                }
            </div>

            <div class="card settings-card">
                <h3 class="settings-title">Device Connection</h3>
                <p class="settings-subtitle">Manage your sensor</p>

                <div class="device-status-box">
                    <div class="device-info">
                        <div class="device-icon-large">‚ö°</div>
                        <div class="device-details">
                            <div class="device-name">Placeholder Device ID</div>
                            <div class="device-status-text">Disconnected</div>
                            <div class="device-meta">Last seen: --</div>
                        </div>
                    </div>
                </div>

                <div class="device-stats">
                    <div class="device-stat">
                        <span class="stat-label">Battery:</span>
                        <span class="stat-value">Placeholder</span>
                    </div>
                    <div class="device-stat">
                        <span class="stat-label">Firmware:</span>
                        <span class="stat-value">Placeholder</span>
                    </div>
                    <div class="device-stat">
                        <span class="stat-label">Signal:</span>
                        <span class="stat-value">Placeholder</span>
                    </div>
                </div>

                <button class="btn-outline">
                    üîç Scan for Devices
                </button>

                <div class="pairing-instructions">
                    <h5 class="instructions-title">Pair New Device</h5>
                    <ol class="instructions-list">
                        <li>Placeholder instruction 1</li>
                        <li>Placeholder instruction 2</li>
                        <li>Placeholder instruction 3</li>
                        <li>Placeholder instruction 4</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <!-- Request Clinician Modal -->
    @if (showRequestClinicianModal)
    {
        <div class="modal-overlay" @onclick="CloseRequestClinicianModal">
            <div class="modal-content" @onclick:stopPropagation="true">
                <div class="modal-header">
                    <h3>Request New Clinician</h3>
                    <button class="modal-close" @onclick="CloseRequestClinicianModal">√ó</button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Search for Clinician</label>
                        <input type="text" class="form-input" @bind="clinicianSearchQuery" @bind:event="oninput" @bind:after="SearchClinicians" placeholder="Enter clinician name or email..." />
                    </div>
                    @if (isSearchingClinician)
                    {
                        <div class="loading">Searching...</div>
                    }
                    else if (clinicianSearchResults.Any())
                    {
                        <div class="search-results">
                            @foreach (var clinician in clinicianSearchResults)
                            {
                                <div class="search-result-item" @onclick="() => SelectClinician(clinician.Id)">
                                    <div><strong>@clinician.FirstName @clinician.LastName</strong></div>
                                    <div>@clinician.Email</div>
                                </div>
                            }
                        </div>
                    }
                    else if (!string.IsNullOrWhiteSpace(clinicianSearchQuery) && !isSearchingClinician)
                    {
                        <div class="empty-state">No clinicians found matching your search.</div>
                    }
                </div>
            </div>
        </div>
    }
</div>
