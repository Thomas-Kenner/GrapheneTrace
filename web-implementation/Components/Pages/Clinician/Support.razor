@page "/clinician/support"
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "Clinician")]
@using GrapheneTrace.Web.Components.Layout

@*
    Clinician Support Page
    Author: SID:2402513
    Route: /clinician/support

    Purpose: Placeholder support page for clinicians.
*@

<div class="admin-container">
    <ClinicianHeader />

    <div class="admin-content">
        <div style="background: white; border: 1px solid #e5e7eb; border-radius: 0.5rem; padding: 1.5rem; margin-bottom: 2rem;">
            <h1 class="section-title" style="margin-bottom: 0.5rem;">Support & Chat</h1>
            <p style="color: #6b7280;">
                Get help or chat with support staff.
            </p>
