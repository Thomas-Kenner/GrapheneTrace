@page "/clinician/dashboard"
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "Clinician")]
@using GrapheneTrace.Web.Models
@using GrapheneTrace.Web.Components.Layout
@using GrapheneTrace.Web.Components.UI
@using Microsoft.AspNetCore.Components.Authorization
@inject AuthenticationStateProvider AuthStateProvider

@*
    Clinician Dashboard Page
    Author: SID:2402513
    Route: /clinician/dashboard

    Purpose: Main dashboard for clinician users to view patients and check their status.
*@

<div class="admin-container">
    <ClinicianHeader />

    <div class="admin-content">
        <div style="margin-bottom: 2rem;">
            <h1 class="section-title">Clinician Dashboard</h1>
            <p style="color: var(--muted-foreground);">
                Welcome back, @userName. View and manage your assigned patients below.
            </p>
        </div>

        <Card>
            <CardHeader>
                <div style="display: flex; justify-content: space-between; align-items: center;">
                    <div>
                        <h3 style="margin: 0; font-size: 1.1rem; font-weight: 600;">Assigned Patients</h3>
                        <p style="margin: 0; color: var(--muted-foreground); font-size: 0.9rem;">
                            You have @patients.Count assigned patient@(patients.Count == 1 ? "" : "s")
                        </p>
                    </div>
                </div>
            </CardHeader>
            <CardContent>
                <div class="table-responsive">
                    <table class="patient-table">
                        <thead>
                            <tr>
                                <th>Name / ID</th>
                                <th>Age</th>
                                <th>Condition</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (patients.Count == 0)
                            {
                                <tr>
                                    <td colspan="4" style="text-align: center; padding: 2rem; color: var(--muted-foreground);">
                                        No patients assigned.
                                    </td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var patient in patients)
                                {
                                    <tr>
                                        <td>
                                            <div class="patient-name">@patient.FullName</div>
                                            <div class="patient-id">ID: @patient.Id.ToString().Substring(0, 8)</div>
                                        </td>
                                        <td>
                                            @(patient.DateOfBirth.HasValue ? (DateTime.Now.Year - patient.DateOfBirth.Value.Year) : "N/A")
                                        </td>
                                        <td>
                                            <span class="status-badge @(patient.Condition?.ToLower() == "critical" ? "status-critical" : "status-normal")">
                                                @(patient.Condition ?? "Unknown")
                                            </span>
                                        </td>
                                        <td>
                                            <Button Variant="primary" Size="sm" OnClick="() => OpenCheckModal(patient)">
                                                Check Patient
                                            </Button>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </CardContent>
        </Card>
    </div>

    <div class="admin-footer">
        <p>Contact us · About · FAQ</p>
    </div>
</div>

@if (showModal)
{
    <div class="modal-overlay" @onclick="CloseModal">
        <div class="modal-content" @onclick:stopPropagation="true">
            <button class="modal-close" @onclick="CloseModal">&times;</button>
            @* White placeholder content as requested *@
            <div style="height: 100%; display: flex; justify-content: center; align-items: center;">
                @* Content intentionally left blank/minimal as per requirements *@
            </div>
        </div>
    </div>
}

@inject GrapheneTrace.Web.Services.UserManagementService UserManagementService

@code {
    private string userName = "";
    private bool showModal = false;
    private ApplicationUser? selectedPatient;
    private List<ApplicationUser> patients = new();

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        userName = user.Identity?.Name ?? "Unknown";

        if (user.Identity?.IsAuthenticated == true)
        {
            // Get the current clinician's ID
            var appUser = await UserManagementService.GetUserByIdAsync(Guid.Parse(user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value ?? Guid.Empty.ToString()));
            
            if (appUser != null)
            {
                patients = await UserManagementService.GetPatientsByClinicianAsync(appUser.Id);
            }
        }
    }

    private void OpenCheckModal(ApplicationUser patient)
    {
        selectedPatient = patient;
        showModal = true;
        StateHasChanged();
    }

    private void CloseModal()
    {
        showModal = false;
        selectedPatient = null;
        StateHasChanged();
    }
}

