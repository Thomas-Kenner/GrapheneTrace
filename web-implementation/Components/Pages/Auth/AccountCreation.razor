    /// <summary>
    /// Handles account creation via HTTP POST to controller endpoint.
    /// Author: SID:2412494
    /// </summary>
    /// <remarks>
    /// Two-Phase Account Creation:
    /// Phase 1 (This method): Create account in database without signing in
    ///   - POST to /account/register with X-Requested-With header
    ///   - Controller creates user, assigns role, returns JSON
    ///   - On success, display step 3 (success overlay)
    ///
    /// Phase 2 (Step 3 form): Sign in with newly created credentials
    ///   - Traditional HTML form POST to /account/login
    ///   - Sets authentication cookie properly
    ///   - Redirects to role-specific dashboard
    ///
    /// Why Two Phases:
    /// Blazor Server components run over SignalR WebSocket. SignInManager can't set cookies
    /// after the response starts. This approach lets us show a success overlay in the Blazor
    /// component, then use a traditional form POST to complete authentication with cookies.
    ///
    /// Future Enhancements:
    /// - Send verification email with confirmation token
    /// - Log account creation event for audit trail (HIPAA requirement)
    /// - Add CAPTCHA to prevent automated account creation
    /// </remarks>
    private async Task HandleAccountCreation()
    {
        errorMessage = null;

        // Client-side validation
        if (string.IsNullOrWhiteSpace(firstName) || string.IsNullOrWhiteSpace(lastName))
        {
            errorMessage = "First name and last name are required";
            currentStep = 1;  // Go back to step 1
            return;
        }

        if (string.IsNullOrWhiteSpace(email) || string.IsNullOrWhiteSpace(password))
        {
            errorMessage = "Email and password are required";
            currentStep = 1;  // Go back to step 1
            return;
        }

        if (password != confirmPassword)
        {
            errorMessage = "Passwords do not match";
            currentStep = 1;  // Go back to step 1
            return;
        }

        isLoading = true;
        StateHasChanged();

        try
        {
            // Create form data
            var formData = new MultipartFormDataContent
            {
                { new StringContent(firstName), "FirstName" },
                { new StringContent(lastName), "LastName" },
                { new StringContent(email), "Email" },
                { new StringContent(password), "Password" },
                { new StringContent(confirmPassword), "ConfirmPassword" },
                { new StringContent(userType), "UserType" }
            };

            // POST to controller endpoint with custom header
            // X-Requested-With signals this is from Blazor component, not traditional form
            // Author: SID:2412494 - Switched from IHttpClientFactory to injected HttpClient
            // The scoped HttpClient already has BaseAddress configured from NavigationManager
            using var request = new HttpRequestMessage(HttpMethod.Post, "/account/register");
            request.Content = formData;
            request.Headers.Add("X-Requested-With", "XMLHttpRequest");

            var response = await Http.SendAsync(request);

            if (response.IsSuccessStatusCode)
            {
                // Account created successfully - move to step 3 (success overlay)
                var result = await response.Content.ReadFromJsonAsync<RegisterResponse>();
                Console.WriteLine("Account created successfully, showing success overlay");
                currentStep = 3;
            }
            else
            {
                // Parse error message
                var errorResult = await response.Content.ReadFromJsonAsync<ErrorResponse>();
                errorMessage = errorResult?.Error ?? "An error occurred while creating your account";
                currentStep = 1;  // Go back to step 1
            }
        }
        catch (Exception ex)
        {
            errorMessage = "An error occurred while creating your account. Please try again.";
            currentStep = 1;  // Go back to step 1
            Console.WriteLine($"Account Creation Exception: {ex}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private class RegisterResponse
    {
        public bool Success { get; set; }
        public string? Message { get; set; }
    }

    private class ErrorResponse
    {
        public string? Error { get; set; }
    }
}
